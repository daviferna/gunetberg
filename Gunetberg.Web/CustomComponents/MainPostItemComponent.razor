@using Gunetberg.Web.Components;


<div class="main-post-item-component">
    <CardComponent IsImageCard="true" >
        <CardImageComponent Source="@HeaderImage"></CardImageComponent>
        <CardContentComponent>
            <h2>@Title</h2>
            <p>@Description</p>
            <LabelComponent>
                <IconComponent Id="fal fa-calendar-alt"></IconComponent>
                <CaptionComponent>
                    @CreationDate.ToShortDateString()
                </CaptionComponent>
            </LabelComponent>
        </CardContentComponent>
    </CardComponent>
</div>